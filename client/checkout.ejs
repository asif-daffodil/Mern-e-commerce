                <option value="red">GUJRAT</option>  
                <option value="yellow">HARYANA</option>  
                <option value="white">HIMACHAL PRADESH</option>  
                <option value="black">JAMMU & KASHMIR</option>  
                <option value="green">JHARKHAND</option>  
                <option value="red">KARNATAKA</option>  
                <option value="yellow">KERALA</option>  
                <option value="white">LADAKH</option>  
                <option value="black">LAKSHADWEEP</option>  
                <option value="green">MADHYA PRADESH</option>  
                <option value="red">MAHARASTRA</option>  
                <option value="yellow">MANIPUR</option>  
                <option value="white">MEGHALAYA</option>  
                <option value="black">MIZORAM</option>  
                <option value="green">NAGALAND</option>  
                <option value="red">ODISHA</option>  
                <option value="yellow">PUNDUCHERRY</option>  
                <option value="white">PUNJAB</option>  
                <option value="black">RAJASTHAN</option>  
                <option value="green">SIKKIM</option>  
                <option value="red">TAMIL NADU</option> 
                <option value="yellow">TELENGANA</option>  
                <option value="white">TRIPURA</option>  
                <option value="black">UTTAR PRADESH</option>  
                <option value="green">UTTARAKHAND</option>  
                <option value="red">WEST BENGAL</option>   
              </select>  
            </form>
          </div>

          <div id="pin-code">
            <label for = "pincode" id="pincode-label">Pincode </label> <br>
            <input type="text" name="pincode" required id="pincode-form"><br>
          </div>
        </div>


        <h3>Payment Method</h3>
          <form>
            <input type="radio"> <span style="color: #696969; font-family: sans-serif; font-size: 15px;"> Cash on Delivery </span><br>
          </form>

          <button type="submit" id="order" onclick="location.href='order-confirmation'">Place Order</button>

      </div>




      <div id="right">

        <h3> <i class="fa-solid fa-cart-shopping"></i> Cart Summary<span style="margin-left: 3px">(</span><a href="cart">edit</a><span>)</span></h3>
        
        <div class="product">

          <span class="quantity">1</span><span style="margin-left: 3px;">×</span> <span class="name">Example Name</span><span class="price">Rs. 120</span><br>

